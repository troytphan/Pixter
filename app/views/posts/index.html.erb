<h1 class="text-center"> 
Star Trek Lovers Unite
</h1>

<br/>

<% @posts.each do |post| %>
	<div class="Launch-box span3 text-center">
		<h1>
			<%= post.title %>
		</h1>

		<% if post.image.present? %>
			<%= image_tag post.image %>
		<% end %>


		<h2>
			<%= post.description %>
		</h2>

	</div>
	

<% end %>